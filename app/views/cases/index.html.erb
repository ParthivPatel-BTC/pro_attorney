<h1>Cases</h1>
    
<table>
  <tr>
    <%= form_tag("cases", method: "get") do %>
      <td> 
          <%= "Case Type" %> 
      </td>
          <td><%= select_tag :case_type_id,options_from_collection_for_select(CaseType.all,    :id, :case_type,selected_case_type),class: "form-control",style: "width:100px"%>
          </td>
      <td>
          <%= submit_tag("Search") %>
      </td>
  </tr>

    <% end %>
</table>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Status</th>
      <th colspan="1"></th>
  </thead>
   </tr>
  <tbody>
    <% @cases.each do |case1| %>
      <tr>
          <td><%= case1.case_title %></td>
          <td><%= case1.location%></td>
          <td><%=case1.status%></td>
          <td><%= link_to case_path(case1) do%><%= image_tag "detail.png", size: "20x40" ,class: "some class here",alt: "show" %>
<% end %><td>
          <td><%= link_to edit_case_path(case1) do%><%= image_tag "edit.png", size: "20x40" ,class: "some class here",alt: "Edit" %><%end%></td>

          <td><%= link_to case1, method: :delete, data: { confirm: 'Are you sure?' } do %><%= image_tag "del.png", size: "20x40" ,class: "some class here",alt: "Edit" %><%end%></td>
        
      </tr>
     <% end %>
  </tbody>
</table>
<%= link_to 'New Case', new_case_path %>
