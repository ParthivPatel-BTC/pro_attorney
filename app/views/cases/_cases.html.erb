<div id="user_case">
<% if @user_case.any?%>  
<% @user_case.each do |user_case| %>
<div class = "box box-primary"><!--start box 2 -->
  <div class = "box-header with-border ">
    <h3 class = "box-title custom-header"><%= user_case.case_title.titleize %></h3>&nbsp;&nbsp;
    <font color="#808080">
      <span class="time">
        <i class="fa fa-clock-o"></i>
        <%= case_created_time(user_case)%>
      </span>
    </font>
    <div class="pull-right">
      <% if current_user.id == user_case.user_id %>
      <%= link_to "",case_path(user_case),class: "fa fa-fw fa-eye", title: "view" %>
      <%= link_to "", edit_case_path(user_case) ,class: "fa fa-fw fa-pencil-square-o", title: "Edit" %>
      <%= link_to "",user_case, method: :delete, data: { confirm: 'Are you sure?' },class: "fa fa-fw fa-trash", title: "delete" %>
      <% end %>
      <% if current_user.is_advocate? %>
  <%=link_to "<i class='fa fa-bookmark-o' style='font-size:20px;color:'blue';></i></i>".html_safe,   favorite_cases_path(id: user_case.id, type: "favorite"), method: :put,remote: true ,id: "f#{user_case.id}"%>
  <%=link_to "<i class='fa fa-bookmark' style='font-size:20px;' ></i></i>".html_safe, favorite_cases_path(id: user_case.id, type: "unfavorite"), method: :put,remote: true,id: "uf#{user_case.id}" %>
<% end %>&nbsp;&nbsp;&nbsp;&nbsp;
      <%= link_to "<img src='paypal2.png' align='right'>".html_safe,case_cases_path(user_case) if current_user.is_advocate? %>
    </div><br>
   </div>
  <div class="box-body">
    <div class="row">
      <div class="col-sm-3">
        <i class="fa fa-fw fa-location-arrow"></i>
        <%= user_case.location.titleize%>
      </div>
      <div class="col-sm-3">
        <span class="label label-primary"><%= user_case.case_type.case_type.titleize%></span>
      </div>
      <div class="col-sm-3">
        <i class="fa fa-fw fa-dollar"></i>
        <%= user_case.case_type.amount %>$
      </div>
      <div class="col-sm-3">
        <% if user_case.status.titleize == "Open"%>
          <span class="label label-success"><%= user_case.status.titleize%></span>
        <% else %>
          <span class="label label-danger"><%= user_case.status.titleize%></span>
        <% end %>
      </div>
    </div>
    <br>
    
    <p>
      <div><%= user_case.case_detail[0,80] %>
        <a data-toggle="collapse" data-target="#demo<%= user_case.id %>">read more</a>
        <div id="demo<%= user_case.id %>" class="collapse">
          <%= user_case.case_detail%>
        </div>
      </div>
    </p>
  </div>
</div><br>

<script>
$("#f<%=user_case.id%>").click(function(){
  $("#f<%=user_case.id%>").hide()
  $("#uf<%=user_case.id%>").show()
});

$("#uf<%=user_case.id%>").click(function(){
  $("#uf<%=user_case.id%>").hide()
  $("#f<%=user_case.id%>").show()
});


<% if FavoriteCase.find_by(case_id: user_case.id,user_id: current_user.id).present? %>
      $("#f<%=user_case.id%>").hide()
        $("#uf<%=user_case.id%>").show()
<%else%>
       $("#uf<%=user_case.id%>").hide()
        $("#f<%=user_case.id%>").show()
<%end%>
</script>
<% end %>
<%else%>
<b>No matching records found</b>
<% end %>
</div>
