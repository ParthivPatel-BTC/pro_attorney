<% unless flash.empty? %>
  <div class="flash_msg alert_msg">
    <% flash.each do |name, message| %>
      <div class="align-center alert alert-<%= name %>">
        <ul>
          <% if message.is_a?Array%>
            <% message.each do |msg| %>
            <li> <%= msg.html_safe %> </li>
            <% end %>
          <% else %>
            <li> <%= message.html_safe %> </li>
          <% end%>
        </ul>
      </div>
    <% end %>
  </div>
<% end %>

<script>
  $('.close').click(function(){
    $('.flash_msg').remove();
  });
</script>