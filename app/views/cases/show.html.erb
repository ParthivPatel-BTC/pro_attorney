    <% if Payment.where(case_id: @user_case.id,user_id: current_user.id).any? %>
      <tr>
      <td>Detail</td> 
      <td><%= @user_case.case_detail %></td>
    </tr>

    <tr>
 	    <td>Documents</td>
 	    <td><%= show_documents %></td>
    </tr>
  <% end %>
  </table>
 <% if Payment.where(case_id: @user_case.id,user_id: current_user.id).any? %>
