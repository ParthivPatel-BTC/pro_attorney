<header class="main-header">
  <a href="#" class="logo">
    <span class="logo-mini"><%= image_tag('proAttorney', height: "50px", width: "50px", class: "pull-left") %></span>
    <%= image_tag('proAttorney', height: "50px", width: "50px", class: "pull-left") %>
    <span class="logo-lg"><b>Pro</b>Attorney</span>
  </a>
  <nav class="navbar navbar-static-top" role="navigation">
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%= avatar_display({class: "user-image"}) %>
            <span class="hidden-xs"><%=user_name.titleize %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <%= avatar_display({class: "img-circle"}) %><br>
              <p><small><%=user_name.titleize %></small></p>
              <p><small><%=current_user.email %></small></p>
            </li>
            
            <li class="user-footer">
              <div class="pull-left">
                <% unless current_user.user_profile== nil %>
                <%= link_to "Profile",user_profile_path(current_user.user_profile.id),class: "btn btn-default btn-flat" %>
                <% end %>
              </div>

              <div class="pull-right">
                <%= link_to "Logout",destroy_user_session_path,method: :delete,class: "btn btn-default btn-flat" %>   
              </div>
            </li>
          </ul>
        </li>
        <li>
          <%= link_to destroy_user_session_path,method: :delete do %>
            <i class="fa fa-sign-out"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>