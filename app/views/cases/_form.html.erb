<% if @user_case.user_id == current_user.id %>
<%= form_for @user_case, html: { :multipart => true }  do |f| %>
<div class = "row">
  <div class = "col-md-6">
    <div class = "box box-primary"><!--start box 1 -->
      <div class = "box-header with-border">
        <h3 class = "box-title custom-header">Case Info</h3><br>
      </div>
      <div class = "box-body">
        <div class = "col-md-12">
          <div class = "form-group">
	          <%= f.label :Case_Type %>
	          <%= f.select :case_type_id,options_from_collection_for_select(CaseType.all, :id, :case_type,
            default_case_type(@user_case)),{},{class: "form-control"} %>
          </div>

          <div class = "form-group">
            <%= f.label :Case_Title %><font color="red">*</font>
            <%= f.text_field :case_title,class: "form-control",placeholder: "Enter Case title" %>
          </div>

          <div class = "form-group">
            <%= f.label :Case_detail %><font color="red">*</font>
            <%= f.text_area :case_detail,class: "form-control",placeholder: "Enter Case detail" %>
          </div>
        </div>
      </div>

    </div>

       <%= f.submit submit_value(@user_case),class: "btn btn-primary" %>    
  </div><!--end box 1 -->

    
  <div class = "col-md-6">
    <div class = "box box-primary"><!--start box 2 -->
      <div class = "box-header with-border">
        <h3 class = "box-title custom-header">Case Info</h3><br>
      </div>
      <div class = "box-body">
        <div class = "col-md-12">

          <div class = "form-group">
            <%= f.label :location %><font color="red">*</font>
            <%= f.text_field :location,class: "form-control",placeholder: "Enter Case Location" %>
          </div> 
  
          <div class = "form-group">
            <%= f.label :status %>
            <%= f.select :status, options_for_select([ "open", "closed" ],@user_case.status),{},{class: "form-control"} %></td>
          </div>
    
          <div class = "form-group">
            <%= f.label :documents_atteched %> <br>   
            <% @documents.each do |document| %>
              <%= document.doc_file_name %>
              <%= link_to "",document_cases_path(document), method: :delete, data: { confirm: '          ' }, title: "Do You Want To Delete This Case ?" %>

            <% end %>
          </div>

          <div class = "form-group">
            <%= f.label :document %>
            <%= file_field_tag "document[]", type: :file, multiple: true %>
          </div>


          <div class = "form-group">
            <%= f.label :tag_list %><font color="red">*</font>
            <%= f.text_area :tag_list,class: "form-control",placeholder: "Enter Tags for better search" %>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
<% end %>
<% else %>
<h3>you are not allowed to view this page</h3>
<% end %>
