<h1>Cases</h1>

<%= render partial: "search_form" %>
  <% if @cases.present? %>
    <table class="table table-striped">    
<table>
  <tr>
    <%= form_tag("cases", method: "get") do %>
      <td> 
          <%= "Case Type" %> 
      </td>
          <td><%= select_tag :case_type_id,options_from_collection_for_select(CaseType.all,    :id, :case_type,selected_case_type),class: "form-control",style: "width:100px"%>
          </td>
      <td>
          <%= submit_tag("Search") %>
      </td>
  </tr>

    <% end %>
</table>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Status</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "cases" %>
  </tbody>
</table>
<%= link_to 'New Case', new_case_path %>
<%= will_paginate @cases, renderer: BootstrapPagination::Rails, class: "pull-right"%>
  <% else %>
  <p>No matching result found</p>
<% end %>
