<table>
  <tr>
    <%= form_tag("cases", method: "get") do %>
      <td> 
          <%= "Case Type" %> 
      </td>
      

          <td><%= select_tag :case_type_id,options_from_collection_for_select(CaseType.all,    :id, :case_type,selected_case_type),class: "form-control pull-right",style: "width:100px"%>
          </td>
          
      <td>
          <%= submit_tag("Search") %>
      </td>
  </tr>

    <% end %>
</table>


<%= form_tag(cases_path, method: :get, class: "navbar-form", role: 'search', id: "search-form") do %>
<div class="form-group pull-right">
	<div class="input-group">
		<%= text_field_tag 'search', nil, class: "form-control", placeholder: "search cases",title: "Enter to search" %>
		<div class='input-group-btn'>
			<%= button_tag(type: 'submit', class: "btn btn-large btn-search btn-primary") do %>
 				<i class="fa fa-search"></i> 
			<% end %>
		</div>
	</div>
</div><br><br>
<% end %>