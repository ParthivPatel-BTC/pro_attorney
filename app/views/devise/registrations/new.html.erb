<div class="alert alert-info">
  <%= devise_error_messages! %>
  </div>
    
<div class="register-box">
  <div class="register-logo">
    <b>Pro</b>ATTORNEY
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Register a new membership</p>
    <h2>Sign up</h2>
    <%= form_for @user, url: user_registration_path, :method => :post do |f| %>
    
    <div class="form-group has-feedback">
      <%= f.email_field :email,autofocus: true,class: "form-control" ,placeholder: "Email" %>
      <!-- <span class="glyphicon glyphicon-envelope form-control-feedback"></span> -->
    </div>
    
    <div class="form-group has-feedback">
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,class: "form-control",placeholder: "password"  %>
    <!-- <span class="glyphicon glyphicon-lock form-control-feedback"></span> -->
    </div>

    <div class="form-group has-feedback">
      <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control", placeholder: "confirm password"%>
       <!-- <span class="glyphicon glyphicon-log-in"></span> -->
    </div>

    <div class="form-group has-feedback">
    <%=f.label "select Your Role" %><br>
    <%= f.select :role_id, options_from_collection_for_select(Role.where("title != 'system_admin'"),:id,:title),{},{class: "form-control"} %>
    </div>

    <div class="form-group has-feedback">
    <%= f.submit "Sign up",class: "btn btn-primary btn-block btn-flat" %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>