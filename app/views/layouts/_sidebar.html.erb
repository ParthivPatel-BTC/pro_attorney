<aside class="main-sidebar">
<section class="sidebar">
          <!-- Sidebar user panel -->
          <div class="user-panel">
            <div class="pull-left image">
              <%= avatar_display({class: "user-image"}) %>
            </div>
            <div class="pull-left info">
                <p><%=user_name %></p>
            </div>
            <div class="pull-left info">
              <p></p>
              <a href="#"><i class="fa fa-circle text-success"></i>Online</a>
            </div>
          </div>
          <!-- search form -->
          <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
              <input type="text" name="q" class="form-control" placeholder="Search..." />
              <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
              </span>
            </div>
          </form>
          <!-- /.search form -->
          <!-- sidebar menu: : style can be found in sidebar.less -->
          <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview">
              <a href="#">
                <i class="fa fa-dashboard"></i> <span>Dashboard</span> <i class="fa fa-angle-left pull-right"></i>
              </a>
            </li>
            <% if current_user.is_system_admin? %>
            <li class="treeview">
              <%=link_to  admins_view_advocates_path  do %>
              <i class="fa fa-users"></i> <span>Advocates</span> <i class="fa fa-angle-left pull-right"></i>
               <% end %>
            </li>

          <li class="treeview">
              <%=link_to  admins_view_clients_path  do %>
              <i class="fa fa-users"></i> <span>clients</span> <i class="fa fa-angle-left pull-right"></i>
               <% end %>
            </li>

            <li class="treeview">
              <%=link_to  admins_view_cases_path  do %>
                <i class="fa fa-book"></i> <span>Cases</span> <i class="fa fa-angle-left pull-right"></i>
               <% end %>
            </li>

            <% end %>

            <% if current_user.is_client? %>
            <li class="treeview">
              <%= link_to cases_path do %>
              <i class="fa-folder-open"></i> <span>Cases</span> <i class="fa fa-angle-left pull-right"></i>
              <% end %>
            </li>
            <li class="treeview">
              <%= link_to new_case_path do %>
              <i class="fa fa-files-o"></i> <span>New Case</span> <i class="fa fa-angle-left pull-right"></i>
              <% end %>
            </li>

             <li class="treeview">
              <%= link_to user_profiles_path(current_user.id) do %>
               <i class="fa fa-users"></i> <span>Profiles</span> <i class="fa fa-angle-left pull-right"></i>
              <% end %>
            </li>   

            <% end %>

          
           <li class="treeview">
            <%=advocate_links %>
           </li>

            <li class="treeview">
              <% if current_user.user_profile!=nil %>
              <%= link_to  edit_user_profile_path (current_user.user_profile)  do %>
               <i class="fa fa-user"></i> <span>Edit Profile</span> <i class="fa fa-angle-left pull-right"></i>
              <% end %>
              <% end %>
            </li>

            <li class="treeview">
              <%= link_to cases_path do %>
              <i class="fa-folder-open"></i> <span>Cases</span> <i class="fa fa-angle-left pull-right"></i>
              <% end %>
          

           <li class="treeview">
              <%= link_to destroy_user_session_path,method: :delete do %>
               <i class="fa fa-power-off"></i> <span>Logout</span> <i class="fa fa-angle-left pull-right"></i>
              <% end %>
            </li>
        </section>
    </aside>