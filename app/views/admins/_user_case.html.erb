<div id="user_case">
<table class="table table-bordered table-hover dataTable">
<thead>
	<tr>
		<th>No.</th>
		<th>
		Title <%=link_to "Desc", admins_sorting_path(order: "desc"), remote: true, class: "pull-right" %>
		</th>
		<th>Name</th>
		<th>Type</th>
		<th>Actions</th>
	</tr>
</thead>
<tbody>
<% @user_case.each_with_index do |user_case, index|%>
<tr>
	<td><%= index+1 %></td>
	<td><%= link_to case_path(user_case) do%><%= user_case.case_title %><%end%></td>
	<td><%= user_case.user.user_profile.first_name.capitalize %> 
	    <%= user_case.user.user_profile.last_name.capitalize %></td>
	<td><%= user_case.case_type.case_type %></td>
	<td><%= link_to  active?(user_case), update_case_path(user_case), remote: true, method: :patch,
	        title: "Activate/Deactivate Case" %></td>
</tr>
<% end %>
</tbody>
</table>
<%= will_paginate @user_case, renderer: BootstrapPagination::Rails, class: "pull-right" %>
</div>